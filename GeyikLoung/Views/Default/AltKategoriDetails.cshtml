
@{
    Layout = null;
}

@model GeyikLoung.Entities.AltKategori

@{
    ViewBag.Title = Model.Name + " - Ürünler";
}

<h2 class="text-center my-4">@Model.Name</h2>

@if (Model.Products != null && Model.Products.Any())
{
    <div class="row">
        @foreach (var product in Model.Products)
        {
            <div class="col-md-4 col-sm-6 col-12 mb-4">
                <div class="card shadow-sm border-0 h-100">
                    <div class="row g-0">
                        <!-- Ürün Resmi -->
                        <div class="col-4 d-flex justify-content-center align-items-center">
                            <img src="@product.ImagePath" class="img-fluid rounded-start" alt="@product.Name" style="width: 150px; height: 150px; object-fit: cover;" />
                        </div>
                        <!-- Ürün Bilgileri -->
                        <div class="col-8">
                            <div class="card-body d-flex flex-column justify-content-between">
                                <h5 class="card-title fw-bold mb-2">@product.Name</h5>
                                <p class="card-text text-end fw-bold"><strong>Fiyat:</strong> @product.Price ₺</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>Bu alt kategoride henüz ürün bulunmamaktadır.</p>
}
