@{
    ViewBag.Title = "Index";
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <title>Admin Panel Giriş</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/Thema/login/css/style.css">
</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Geyik Lounge Bar & Restaurant Giriş </h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-5">
                    <div class="login-wrap p-4 p-md-5">
                        <div class="icon d-flex align-items-center justify-content-center">
                            <span class="fa fa-user-o"></span>
                        </div>
                        <h3 class="text-center mb-4">Giriş Yapınız</h3>

                        <form method="post" action="@Url.Action("Index", "AdminLogin")" class="w-100" style="max-width: 400px;">
                            <div class="form-group">
                                <input type="text" class="form-control rounded-left" placeholder="Kullanıcı Adı" name="UserName" required>
                            </div>
                            <div class="form-group d-flex">
                                <input type="password" class="form-control rounded-left" placeholder="Şifre" name="Password" required>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary rounded submit p-3 px-5">Giriş Yap</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script type="text/javascript">
        // Çıkış işleminden sonra tarayıcı geçmişini sıfırlamak
        window.onload = function () {
            window.history.pushState(null, null, window.location.href);
            window.history.back();
            window.history.forward();
        }
    </script>

    <script src="/Thema/login/js/jquery.min.js"></script>
    <script src="/Thema/login/js/popper.js"></script>
    <script src="/Thema/login/js/bootstrap.min.js"></script>
    <script src="/Thema/login/js/main.js"></script>
</body>
</html>
