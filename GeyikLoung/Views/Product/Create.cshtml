
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model GeyikLoung.Entities.Product

@using (Html.BeginForm("Create", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        <label for="Name">Ürün Adı</label>
        @Html.TextBoxFor(p => p.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="Price">Fiyatı</label>
        @Html.TextBoxFor(p => p.Price, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="Image">Ürün Resmi</label>
        <input type="file" name="imageFile" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Category">Kategorisi</label>
        @Html.DropDownList("CategoryId", null, "Kategoriyi Seçiniz", new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Ürünü Ekle</button>
}